@using SportSite.Models.Db
@model SportSite.Models.Db.Account

@{
    ViewData["Title"] = "CreateAccount";
}

<h1>Create Account</h1>

<h4>Account</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-5">
        <form asp-action="CreateAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Client.Name" class="control-label"></label>
                <input asp-for="Client.Name" class="form-control" />
                <span asp-validation-for="Client.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Surname" class="control-label"></label>
                <input asp-for="Client.Surname" class="form-control" />
                <span asp-validation-for="Client.Surname" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <label asp-for="Client.Age" class="control-label"></label>
                <input asp-for="Client.Age" class="form-control" />
                <span asp-validation-for="Client.Age" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Client.Tel" class="control-label"></label>
                <input asp-for="Client.Tel" class="form-control" />
                <span asp-validation-for="Client.Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Email" class="control-label"></label>
                <input asp-for="Client.Email" class="form-control" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Gender" class="control-label"></label>
                <select asp-for="Client.Gender" asp-items=" Html.GetEnumSelectList(typeof(Gender))" class="form-control"></select>
                <span asp-validation-for="Client.Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
